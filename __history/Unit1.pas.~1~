unit Unit1;

interface

type
  TMyClass = class(TInterfacedObject, iMyInterface)
    private
    public
      constructor Create;
      destructor Destroy; override;
      class function New : iMyInterface;
  end;

implementation

constructor TMyClass.Create;
begin

end;

destructor TMyClass.Destroy;
begin

  inherited;
end;

class function TMyClass.New : iMyInterface;
begin
  Result := Self.Create;
end;

end.
